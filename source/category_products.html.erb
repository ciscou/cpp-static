<h2><%= category.name %></h2>

<div class="photos">
  <% category.products.each do |product| %>
    <div class="photo-wrapper">
      <% link_to image_path("product/#{product.id}/#{product.slug}.jpg"), title: product.name, class: "photo thumbnail", data: { description: simple_format(product.description) } do %>
        <%= image_tag "product/#{product.id}/thumb/#{product.slug}.jpg", alt: product.name %>
        <span class="caption"><%= product.name %></span>
      <% end %>
    </div>
  <% end %>
</div>
