<pre>
<% data["categories"].each do |category| %>
mkdir -p category/<%= category["id"] %>
wget <%= category["picture"]["url"] %> -O tmp.jpg
cp tmp.jpg category/<%= category["id"] %>/<%= (category["en_name"].presence || category["es_name"]).parameterize %>.jpg
cp tmp.jpg category/<%= category["id"] %>/<%= (category["es_name"].presence || category["es_name"]).parameterize %>.jpg
cp tmp.jpg category/<%= category["id"] %>/<%= (category["fr_name"].presence || category["es_name"]).parameterize %>.jpg
rm tmp.jpg

<% data["category_#{category["id"]}_products"].each do |product| %>
mkdir -p product/<%= product["id"] %>
wget <%= product["picture"]["url"] %> -O tmp.jpg
cp tmp.jpg product/<%= product["id"] %>/<%= (product["en_name"].presence || product["es_name"]).parameterize %>.jpg
cp tmp.jpg product/<%= product["id"] %>/<%= (product["es_name"].presence || product["es_name"]).parameterize %>.jpg
cp tmp.jpg product/<%= product["id"] %>/<%= (product["fr_name"].presence || product["es_name"]).parameterize %>.jpg
rm tmp.jpg

<% end %>

<% end %>
</pre>
