<h2>Ultimas novedades</h2>

<div class="photos">
  <% new_arrivals.each do |product| %>
    <div class="photo-wrapper">
      <% link_to image_path("product/#{product["id"]}/#{product_slug(product)}.jpg"), title: product.es_name, class: "photo thumbnail", data: { description: simple_format(product.es_description) } do %>
        <%= image_tag "product/#{product["id"]}/thumb/#{product_slug(product)}.jpg", alt: product.es_name %>
      <% end %>
    </div>
  <% end %>
</div>

<a class="button large expanded see-more-products" href="/catalogo">Ver mas productos</a>
