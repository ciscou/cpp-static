<!doctype html>
<html class="no-js" lang="en">
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" type="image/png" href="<%= image_path "favicon.png" %>">
    <title><%= current_page.data.title || "Cerámica Padilla Padilla" %></title>
    <%= stylesheet_link_tag "foundation" %>
    <%= stylesheet_link_tag "foundation-icons" %>
    <%= stylesheet_link_tag "blueimp-gallery" %>
    <%= stylesheet_link_tag "app" %>
    <script type="text/javascript">
      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', 'UA-31583406-1']);
      _gaq.push(['_trackPageview']);

      (function() {
        var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
        ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
        var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();
    </script>
  </head>

  <body>
    <div class="header-for-dummies">
      <i class="fi-telephone"></i> (+34) 953 678 087
      |
      <a target="_blank" href="https://www.facebook.com/ceramica.padillapadilla.7"><i class="fi-social-facebook"></i></a>
    </div>
    <nav class="overlay-nav" role="navigation">
      <ul id="overlay-nav-menu" class="overlay-nav-menu">
        <li><a href="/en" class="<%= "is-active" if current_page.data.active_tab == "home" %>">Home</a></li>
        <li><a href="/en/catalog" class="<%= "is-active" if current_page.data.active_tab == "catalog" %>">Catalog</a></li>
        <li><a href="/en/who-are-we" class="<%= "is-active" if current_page.data.active_tab == "who" %>">Who are we?</a></li>
        <li><a href="/en/where-are-we" class="<%= "is-active" if current_page.data.active_tab == "where" %>">Where are we?</a></li>
        <li><a href="/en/contact-us" class="<%= "is-active" if current_page.data.active_tab == "contact" %>">Contact us</a></li>
      </ul>
      <a data-toggle-menu class="overlay-nav-menu-toggle open" href="#overlay-nav-menu"><i class="fi-list"></i></a>
      <a data-toggle-menu class="overlay-nav-menu-toggle close" href="#overlay-nav-menu"><i class="fi-x"></i></a>
    </nav>
    <header class="subnav-hero-section">
      <%= image_tag "white-logo.png", class: "logo" %>
      <h1 class="subnav-hero-headline">Cerámica Padilla Padilla</h1>
      <ul class="subnav-hero-subnav">
        <li><a href="/en" class="<%= "is-active" if current_page.data.active_tab == "home" %>">Home</a></li>
        <li><a href="/en/catalog" class="<%= "is-active" if current_page.data.active_tab == "catalog" %>">Catalog</a></li>
        <li><a href="/en/who-are-we" class="<%= "is-active" if current_page.data.active_tab == "who" %>">Who are we?</a></li>
        <li><a href="/en/where-are-we" class="<%= "is-active" if current_page.data.active_tab == "where" %>">Where are we?</a></li>
        <li><a href="/en/contact-us" class="<%= "is-active" if current_page.data.active_tab == "contact" %>">Contact us</a></li>
      </ul>
    </header>

    <div class="grid-container">
      <%= yield %>
    </div>

    <footer style="background-color: #ddd; padding: 48px 12px; margin-top: 96px">
      <div class="grid-container">
        <div class="grid-x">
          <div class="cell medium-6" style="text-align: center">
            <span style="color: #d00000; font-weight: bold">
              <%= image_tag "red-logo.png", style: "width: 30px" %>
              Ceramica Padilla Padilla
            </span>
          </div>
          <div class="cell medium-6" style="text-align: center">
            <a href="/en" style="color: #333">English</a> |
            <a href="/es" style="color: #333">Espanol</a> |
            <a href="/fr" style="color: #333">Francais</a>
          </div>
        </div>
      </div>
    </footer>

    <div id="blueimp-gallery" class="blueimp-gallery blueimp-gallery-controls">
      <div class="slides"></div>
      <h3 class="title"></h3>
      <a class="prev">‹</a>
      <a class="next">›</a>
      <a class="close">×</a>
      <a class="play-pause"></a>
      <div class="description"></div>
    </div>

    <%= javascript_include_tag "foundation" %>
    <%= javascript_include_tag "blueimp-gallery" %>
    <%= javascript_include_tag "app" %>
  </body>
</html>
