<!doctype html>
<html class="no-js" lang="es">
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" type="image/png" href="<%= image_path "favicon.png" %>">
    <title><%= current_page.data.title || "Cerámica Padilla Padilla" %></title>
    <%= stylesheet_link_tag "foundation" %>
    <%= stylesheet_link_tag "foundation-icons" %>
    <%= stylesheet_link_tag "blueimp-gallery" %>
    <%= stylesheet_link_tag "app" %>
  </head>

  <body>
    <div class="header-for-dummies">
      <i class="fi-telephone"></i> (+34) 953 678 087
      |
      <a target="_blank" href="https://www.facebook.com/ceramica.padillapadilla.7"><i class="fi-social-facebook"></i></a>
    </div>
    <nav class="overlay-nav" role="navigation">
      <ul id="overlay-nav-menu" class="overlay-nav-menu">
        <li><a href="/es" class="<%= "is-active" if current_page.data.active_tab == "home" %>">Inicio</a></li>
        <li><a href="/es/catalogo" class="<%= "is-active" if current_page.data.active_tab == "catalog" %>">Catalogo</a></li>
        <li><a href="/es/quienes-somos" class="<%= "is-active" if current_page.data.active_tab == "who" %>">Quienes somos?</a></li>
        <li><a href="/es/donde-estamos" class="<%= "is-active" if current_page.data.active_tab == "where" %>">Donde estamos?</a></li>
        <li><a href="/es/contacte-con-nosotros" class="<%= "is-active" if current_page.data.active_tab == "contact" %>">Contacte con nosotros</a></li>
      </ul>
      <a data-toggle-menu class="overlay-nav-menu-toggle open" href="#overlay-nav-menu"><i class="fi-list"></i></a>
      <a data-toggle-menu class="overlay-nav-menu-toggle close" href="#overlay-nav-menu"><i class="fi-x"></i></a>
    </nav>
    <header class="subnav-hero-section">
      <%= image_tag "white-logo.png", class: "logo" %>
      <h1 class="subnav-hero-headline">Cerámica Padilla Padilla</h1>
      <ul class="subnav-hero-subnav">
        <li><a href="/es" class="<%= "is-active" if current_page.data.active_tab == "home" %>">Inicio</a></li>
        <li><a href="/es/catalogo" class="<%= "is-active" if current_page.data.active_tab == "catalog" %>">Catalogo</a></li>
        <li><a href="/es/quienes-somos" class="<%= "is-active" if current_page.data.active_tab == "who" %>">Quienes somos?</a></li>
        <li><a href="/es/donde-estamos" class="<%= "is-active" if current_page.data.active_tab == "where" %>">Donde estamos?</a></li>
        <li><a href="/es/contacte-con-nosotros" class="<%= "is-active" if current_page.data.active_tab == "contact" %>">Contacte con nosotros</a></li>
      </ul>
    </header>

    <div class="grid-container">
      <%= yield %>
    </div>

    <footer style="background-color: #bbb; padding: 12px">
      <div class="grid-container">
        <div class="grid-x">
          <div class="cell medium-6" style="text-align: center">
            <span style="color: #d00000; font-weight: bold">
              <%= image_tag "red-logo.png", style: "width: 30px" %>
              Ceramica Padilla Padilla
            </span>
          </div>
          <div class="cell medium-6" style="text-align: center">
            <a href="/en" style="color: #333">English</a> |
            <a href="/es" style="color: #333">Espanol</a> |
            <a href="/fr" style="color: #333">Francais</a>
          </div>
        </div>
      </div>
    </footer>

    <div id="blueimp-gallery" class="blueimp-gallery blueimp-gallery-controls">
      <div class="slides"></div>
      <h3 class="title"></h3>
      <a class="prev">‹</a>
      <a class="next">›</a>
      <a class="close">×</a>
      <a class="play-pause"></a>
      <div class="description"></div>
    </div>

    <%= javascript_include_tag "foundation" %>
    <%= javascript_include_tag "blueimp-gallery" %>
    <%= javascript_include_tag "app" %>
  </body>
</html>
